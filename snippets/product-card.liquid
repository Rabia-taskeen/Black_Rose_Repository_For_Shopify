<div class="w-full py-6 px-3">
  <div class="border bg-colo-white shadow-lg rounded-lg overflow-hidden">
    <a href="{{ product.url }}">
      {% if product.featured_image %}
        <div class="h-80 overflow-hidden">
          <img
            class="w-full h-full object-cover transition duration-1000 ease-in-out hover:scale-105 transform"
            width="{{ product.featured_image.width }}"
            height="{{ product.featured_image.height }}"
            src="{{ product.featured_image | img_url: 'medium' }}"
            alt="{{ product.featured_image.alt }}"
            loading="eager"
          >
        </div>
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-200 transition duration-1000 ease-in-out hover:scale-105 transform' }}
      {% endif %}
    </a>
    <div class="flex flex-col p-4">
      <span class="text-sm text-gray-400">{{ product.vendor }}</span>

      <a class="text-gray-700 uppercase font-medium" href="{{ product.url }}">{{ product.title }}</a>

      <p class="text-gray-500">{{ product.price | money }}</p>
    </div>
  </div>
</div>
